extends layout

block content

  .container-sm.mx-auto
    form.log-form(action='', method='POST')
      h1 Create a new user:
      dl.form-group
        dt
          lable(for='username') Username:
        dd
          input#username.form-control(type='text', name='username', requierd='true', placeholder='username', value=(undefined===user ? '' : user.username))
      dl.form-group
        dt 
          lable(for='password') Password:
        dd
          input#password.form-control(type='password', name='password', required='true', placeholder='password', value=(undefined===user ? '' : user.password))
      button.btn.btn-primary.width-full(type='submit') Sign Up

  if errors
    ul.container-sm.mx-auto.bg-danger.text-danger
      for error in errors
        li!= error.msg